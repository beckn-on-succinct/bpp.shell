[Unit]
Description=bpp.shell server
After=network.target

[Service]
Type=forking
PidFile=/home/ubuntu/bpp.shell-%i/tmp/pid

User=ubuntu
Group=ubuntu

ExecStart=/bin/bash -c /home/ubuntu/bpp.shell-%i/bin/swfstart
SuccessExitStatus=SIGKILL

StartLimitBust=2
StartLimitIntervalSec=300


TimeoutSec=300

Restart=always

PrivateTmp=true

[Install]
WantedBy=multi-user.target

